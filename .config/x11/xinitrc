#!/bin/sh

export GTK_IM_MODULE="fcitx5"
export QT_IM_MODULE="fcitx5"
export SDL_IM_MODULE="fcitx5"
export XMODIFIERS="@im=fcitx5"

# keymaps
setxkbmap -option "ctrl:nocaps"
xset r rate 300 50
xrdb "$XDG_CONFIG_HOME/x11/xresources"
nginx -c "$XDG_CONFIG_HOME/nginx/shared" -p "$HOME/shared/"

xmodmap -e "keycode 255 = Tab"
xmodmap -e "keycode 23 = Super_L"
hsetroot -solid '#111111'
# hsetroot -solid '#f8dfdf' # pink
# bg
fcitx5 -d &
redshift &
feh --bg-fill --randomize ~/.local/share/wallpaper/active/* &
mpd &
unclutter &
xcape -t 200 -e "Super_L=Tab;Control_L=Escape"&
picom --experimental-backends &
# syncthing --no-browser &
dunst &
dwmblocks &
sxhkd &
exec dwm
